# Flask
APP_ENV=development
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# Database
# SQLite (default)
DATABASE_URL=sqlite:///./hrms.db
# PostgreSQL example:
# DATABASE_URL=postgresql+psycopg2://hrms:hrms@localhost:5432/hrms

# Auth
GOOGLE_CLIENT_ID=
SESSION_TTL_MINUTES=720
AUTH_ALLOW_TEST_TOKENS=0

# App
APP_TIMEZONE=Asia/Kolkata
ALLOWED_ORIGINS=*
UPLOAD_DIR=./uploads

# Rate limits
RATE_LIMIT_DEFAULT=300 per minute
RATE_LIMIT_GLOBAL=2000 per minute
RATE_LIMIT_LOGIN=30 per minute
